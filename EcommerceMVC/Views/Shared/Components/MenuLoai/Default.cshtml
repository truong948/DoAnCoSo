@model IEnumerable<EcommerceMVC.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
	<div class="mb-3">
		<h4>Đặc sản đà lạt</h4>
		<ul class="list-unstyled fruite-categorie">
			@foreach (var item in Model) //hiển thị danh sách sản phẩm tử MenuLoaiVM
			{
				<li>
					<div class="d-flex justify-content-between fruite-name">
						<a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.MaLoai">
							<i class="fas fa-apple-alt me-2"></i>@item.TenLoai
						</a>
						<span>(@item.SoLuong)</span> @* Hiển thị số lượng SP có trong loại đó *@
					</div>
				</li>
			}

		</ul>
	</div>
</div>