@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EcommerceMVC.Data.HangHoa

@{
    ViewData["Title"] = "Thêm Sản Phẩm Mới";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Thêm Sản Phẩm Mới</h1>
    <hr />

    <form method="post" asp-action="ThemSanPhamMoi" class="shadow p-4 bg-light rounded">
        <h4 class="text-secondary">Thông Tin Sản Phẩm</h4>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="TenHh" class="form-label fw-bold">Tên Hàng Hóa</label>
                    <input asp-for="TenHh" class="form-control" placeholder="Nhập tên hàng hóa" />
                    <span asp-validation-for="TenHh" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TenAlias" class="form-label fw-bold">Tên Alias</label>
                    <input asp-for="TenAlias" class="form-control" placeholder="Nhập tên alias" />
                    <span asp-validation-for="TenAlias" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MaLoai" class="form-label fw-bold">Loại Sản Phẩm</label>
                    <select asp-for="MaLoai" class="form-select" asp-items="ViewBag.MaLoai">
                        <option value="">Chọn loại sản phẩm</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MoTaDonVi" class="form-label fw-bold">Mô Tả Đơn Vị</label>
                    <input asp-for="MoTaDonVi" class="form-control" placeholder="Nhập mô tả đơn vị" />
                    <span asp-validation-for="MoTaDonVi" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="DonGia" class="form-label fw-bold">Đơn Giá</label>
                    <input asp-for="DonGia" class="form-control" placeholder="Nhập đơn giá" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Hinh" class="form-label fw-bold">Hình Ảnh</label>
                    <input asp-for="Hinh" class="form-control" placeholder="Đường dẫn hình ảnh" />
                    <span asp-validation-for="Hinh" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NgaySx" class="form-label fw-bold">Ngày Sản Xuất</label>
                    <input asp-for="NgaySx" class="form-control" placeholder="Nhập ngày sản xuất" />
                    <span asp-validation-for="NgaySx" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="GiamGia" class="form-label fw-bold">Giảm Giá (%)</label>
                    <input asp-for="GiamGia" class="form-control" placeholder="Nhập giảm giá" />
                    <span asp-validation-for="GiamGia" class="text-danger"></span>
                </div>
            </div>
        </div>

        <h4 class="text-secondary mt-4">Thông Tin Bổ Sung</h4>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="SoLanXem" class="form-label fw-bold">Số Lần Xem</label>
                    <input asp-for="SoLanXem" class="form-control" placeholder="Nhập số lần xem" />
                    <span asp-validation-for="SoLanXem" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MoTa" class="form-label fw-bold">Mô Tả</label>
                    <textarea asp-for="MoTa" class="form-control" placeholder="Nhập mô tả sản phẩm"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="MaNcc" class="form-label fw-bold">Nhà Cung Cấp</label>
                    <select asp-for="MaNcc" class="form-select" asp-items="ViewBag.MaNcc">
                        <option value="">Chọn nhà cung cấp</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary mt-3">Thêm Sản Phẩm</button>
        </div>
    </form>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
    </div>
</div>
